<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/debugItemsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/design"
            android:textAllCaps="true" />

        <Switch
            android:id="@+id/scalpel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scalpel" />

        <Switch
            android:id="@+id/wireframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/wireframe" />

        <Switch
            android:id="@+id/drawIds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/draw_ids" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/api_url" />

        <TextView
            android:id="@+id/tvEndpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_settings_black_24dp_compat" />

        <TextView
            android:id="@+id/tvBaseUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBaseImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_stetho_logs" />

        <Switch
            android:id="@+id/showImageLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_image_request" />

        <Button
            android:id="@+id/btnShowLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/show_logs" />

        <TextView
            android:id="@+id/tvDebugUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/build_info"
            android:textAllCaps="true" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <TextView android:text="@string/build_version_code" />

            <TextView android:id="@+id/tvVersionCode" />

            <TextView android:text="@string/build_version_name" />

            <TextView android:id="@+id/tvVersionName" />

            <TextView android:text="@string/build_time" />

            <TextView android:id="@+id/tvBuildTime" />

            <TextView android:text="@string/git_sha" />

            <TextView android:id="@+id/tvGitSha" />

            <TextView android:text="@string/git_message" />

            <TextView android:id="@+id/tvGitCommitMessage" />
        </GridLayout>
    </LinearLayout>
</ScrollView>